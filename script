pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'main', url: 'https://github.com/username/your-web-project.git'
            }
        }

        stage('Build WAR') {
            steps {
                echo "ğŸ”§ Running maven package..."
                sh 'mvn clean package'
            }
        }

        stage('Test') {
            steps {
                echo "ğŸ§ª Running Maven tests..."
                sh 'mvn test'
            }
        }

        stage('Done') {
            steps {
                echo "ğŸ‰ Build Completed â€” WAR File Generated!"
            }
        }
    }
}
